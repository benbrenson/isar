# Base rootfs image creation kickstart file, describing an sd-card image with two redundant
# partitions.

bootloader --source bootstream
part /boot --source bootimg-partition --ondisk mmcblk --fstype=vfat --label boot --active --align 2048
part / --source rootfs --rootfs-dir=rootfs --ondisk mmcblk --fstype=ext4 --label roota --align 2048
part /rescue --source rootfs --rootfs-dir=rootfs --ondisk mmcblk --fstype=ext4 --label rootb --align 2048

